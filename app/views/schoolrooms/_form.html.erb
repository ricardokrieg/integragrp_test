<%= simple_nested_form_for @schoolroom, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :name %>

    <%= f.simple_fields_for :schedules do |schedule_form| %>
        <%= schedule_form.association :subject %>
        <%= schedule_form.link_to_remove 'Remove this schedule' %>
    <% end %>

    <%= f.link_to_add 'Add schedule', :schedules %>

    <div class='form-actions'>
        <%= f.button :submit, :class => 'btn-primary' %>
        <%= link_to 'Cancel', schoolrooms_path, :class => 'btn' %>
    </div>
<% end %>
